@model InsuranceTest.Models.RegisterViewModel

@{
    ViewData["Title"] = "Registrace";  
}

<div class="center-800">

    <h1>@ViewData["Title"]</h1>
    
    <form class="d-flex flex-column" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
        <div class="row">
            <div class="form-group col-sm-6 mb-2">
                <label asp-for="Name" class="control-label"></label>        
                <input asp-for="Name" class="form-control" />               
                <span asp-validation-for="Name" class="text-danger"></span> 
            </div>

            <div class="form-group col-sm-6 mb-2">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-sm-6 mb-2">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group col-sm-6 mb-2">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <!-- Ulice -->
            <div class="form-group col-sm-6 mb-2">
                <label asp-for="Street" class="control-label"></label>
                <input asp-for="Street" class="form-control" />
            </div>

        </div>

        <div class="row">
            <div class="form-group col-sm-6 mb-2">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="form-group col-sm-6 mb-2">
                <label asp-for="Zip" class="control-label"></label>
                <input asp-for="Zip" class="form-control" />
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
        </div>

        <div class="row pb-3">
            <div class="form-group col-sm-6 mb-2">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-6 mb-2">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
   
        <button type="submit" class="btn btn-primary align-self-center">Registrovat</button>
    </form>

</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}