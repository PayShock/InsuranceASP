@model InsuranceApp.Models.Insured

@{
    ViewData["Title"] = "Editovat pojištěnce";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="form-group col-md-6 py-2">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 py-2">
            <label asp-for="Surname" class="control-label"></label>
            <input asp-for="Surname" class="form-control" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6 py-2">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" type="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 py-2">
            <label asp-for="Phone" class="control-label"></label>
            <input asp-for="Phone" class="form-control" type="tel" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6 py-2">
            <label asp-for="Street" class="control-label"></label>
            <input asp-for="Street" class="form-control" />
            <span asp-validation-for="Street" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 py-2">
            <label asp-for="City" class="control-label"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6 py-2"></div>
        <div class="form-group col-md-6 py-2">
            <label asp-for="Zip" class="control-label"></label>
            <input asp-for="Zip" class="form-control" />
            <span asp-validation-for="Zip" class="text-danger"></span>
        </div>
    </div>

    <input type="hidden" asp-for="Password" value="DefaultPassword0" />
    <input type="hidden" asp-for="ConfirmPassword" value="DefaultPassword0" />

    <div class="form-group py-4 text-center">
        <input type="submit" value="Uložit" class="btn btn-primary" />
        <!--<a asp-action="Index" class="btn btn-warning mx-2">Zpět</a>-->
        <a class="btn btn-warning mx-2" onclick="javascript:history.back();">Zpět</a>
    </div>
</form>


