@using InsuranceApp.Models
@model InsuranceApp.Models.InsuredEvent

@{
    ViewData["Title"] = "Upravit pojistnou událost";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="form-group col-md-6 py-2 col-md-6 py-2">
            <label for="Pojistenec" class="control-label">Pojištěnec</label>
            <input id="Pojistenec" class="form-control" value="@ViewBag.Insured.Surname @ViewBag.Insured.Name" disabled />
        </div>
        <div class="form-group col-md-6 py-2 col-md-6 py-2">
            <label for="Pojisteni" class="control-label">Pojistná smlouva</label>
            <input id="Pojisteni" class="form-control" value="@ViewBag.Insurance.Type - @ViewBag.Insurance.Subject" disabled />
            <input type="hidden" asp-for="InsuranceId" value="@ViewBag.Insurance.Id" />
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6 py-2 col-md-6 py-2">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 py-2 col-md-6 py-2">
            <label asp-for="Date" class="control-label"></label>
            <input asp-for="Date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6 py-2 col-md-6 py-2">
            <label asp-for="Status" class="control-label"></label>
            <!--<input asp-for="Status" class="form-control" />-->
            <select asp-for="Status" class="form-control" asp-items="InsuredEvent.GetStatusTypes()"></select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 py-2 col-md-6 py-2">
            <label asp-for="Amount" class="control-label"></label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group d-flex justify-content-center flex-wrap my-4">
        <input type="submit" value="Uložit" class="btn btn-primary mx-2" />
        <a class="btn btn-warning mx-2" onclick="javascript:history.back();">Zpět</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
