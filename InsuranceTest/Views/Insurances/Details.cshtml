@model InsuranceApp.Models.Insurance

@{
    ViewData["Title"] = "Pojistná smlouva";
}

<h1>@ViewData["Title"]</h1>

<div class="my-5">
    <dl class="row">
        <dt class="col-sm-2">
            Pojištěnec
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Insured.Surname) @Html.DisplayFor(model => model.Insured.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DurationSince)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DurationSince)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DurationTill)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DurationTill)
        </dd>
    </dl>
</div>
<div class="d-flex justify-content-center flex-wrap my-4">
    <!--<a asp-action="Index">Back to List</a>-->
    <a class="btn btn-primary mx-2" onclick="javascript:history.back();">Zpět</a>
    @if (User.IsInRole("Admin"))
    {
        <a asp-controller="InsuredEvents" asp-action="Create" class="btn btn-warning mx-2">Přidat pojistnou událost</a>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-danger mx-2">Upravit</a>
    }
</div>
