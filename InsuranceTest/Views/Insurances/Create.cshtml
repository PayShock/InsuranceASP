@using InsuranceApp.Models
@model InsuranceApp.Models.Insurance

@{
    ViewData["Title"] = "Přidat pojistnou smlouvu";
}

<h1>@ViewData["Title"]</h1>

<dl class="row">
    <dt class="col-sm-3">
        Pojištěnec
    </dt>
    <dd class="col-sm-9">
        <a asp-controller="Insureds" asp-action="Details" asp-route-id="@ViewBag.Insured.Id">
            @ViewBag.Insured.Name @ViewBag.Insured.Surname
        </a>
    </dd>
</dl>

<hr />
<h4>Pojistná smlouva</h4>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="form-group col-md-6 py-2 col-md-6 py-2">
            <label asp-for="Type" class="control-label"></label>
            <select asp-for="Type" class="form-control" asp-items="Insurance.GetInsuranceTypes()"></select>
        </div>
        <div class="form-group col-md-6 py-2 col-md-6 py-2"></div>
    </div>
    <div class="row">
        <div class="form-group col-md-6 py-2">
            <label asp-for="Subject" class="control-label"></label>
            <input asp-for="Subject" class="form-control" />
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 py-2">
            <label asp-for="Amount" class="control-label"></label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6 py-2">
            <label asp-for="DurationSince" class="control-label"></label>
            <input asp-for="DurationSince" class="form-control" />
            <span asp-validation-for="DurationSince" class="text-danger"></span>
        </div>

        <div class="form-group col-md-6 py-2">
            <label asp-for="DurationTill" class="control-label"></label>
            <input asp-for="DurationTill" class="form-control" />
            <span asp-validation-for="DurationTill" class="text-danger"></span>
        </div>
    </div>
    <input type="hidden" asp-for="InsuredId" value="@ViewBag.Insured.Id" />

    <div class="form-group py-4 text-center">
        <input type="submit" value="Vytvořit smlouvu" class="btn btn-primary" />
        <!--<a asp-action="Index" class="btn btn-warning mx-2">Zpět</a>-->
        <a class="btn btn-warning mx-2" onclick="javascript:history.back();">Zpět</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
